@model OnlineShop.OnlineClient.Pagination.Models.PaginationModel<OnlineShop.BusinessLogic.Models.OrderModel>
@using OnlineShop.OnlineClient.App_Code
@{
    ViewData["Title"] = "Orders list";
}

<div class="ml-5 mt-5">
    <div>
        <div class="form-group">
            <div class="input-group" id="datetimepicker">
                <input type="text" class="form-control" />
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-calendar"></i>
                </span>
            </div>
        </div>
    </div>
    <h3>Orders List</h3>
    <table class="table table-bordered" id="table">
        <thead>
            <tr>
                <td>№</td>
                <td>Date</td>
                <td>Manager</td>
                <td>Client</td>
                <td>Item</td>
                <td>Price</td>
                @if (User.IsInRole("admin"))
                {
                    <td>Edit</td>
                    <td>Delete</td>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Items)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Date</td>
                    <td>@order.Manager</td>
                    <td>@order.Client</td>
                    <td>@order.Item</td>
                    <td>@order.AmountOfMoney</td>
                    @if (User.IsInRole("admin"))
                    {
                        <td><a asp-action="Edit" asp-controller="Order" asp-route-id="@order.OrderId">Edit</a></td>
                        <td><a asp-action="Delete" asp-controller="Order" asp-route-id="@order.OrderId">Delete</a></td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <br />
    <div id="paginationBlock">
        @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", "Order", new {page = x}))
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
            $('#paginationBlock a').click(function(e) {
                e.preventDefault();
                $.ajax({
                    type: 'post',
                    url: $(this).attr('href'),
                    success: function(data) {
                        $('#dataDiv').html(data);
                    },
                    error: function(req, status, error) {
                        console.log(error);
                    }
                });
            });
        });
</script>
