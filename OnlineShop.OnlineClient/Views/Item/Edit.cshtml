@model OnlineShop.BusinessLogic.Models.ItemModel

<div class="m-5">
    <h3>Item editing</h3>
    <div class="ml-5 mt-5">
        <form asp-action="Save" asp-controller="Item" method="post">
            <input type="hidden" asp-for="ItemId" />
            <div class="row g-3 align-items-center mb-4">
                <div class="col-auto">
                    <label class="col-form-label" asp-for="Name">Name</label>
                </div>
                <div class="col-auto">
                    <input class="form-control" asp-for="Name" type="text" />
                </div>
            </div>
            <div class="text-right">
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>
