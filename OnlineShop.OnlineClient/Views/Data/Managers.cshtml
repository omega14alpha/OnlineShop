@model OnlineShop.OnlineClient.Pagination.Models.PaginationModel<OnlineShop.BusinessLogic.Models.ManagerModel>
@using OnlineShop.OnlineClient.App_Code
@{
    ViewData["Title"] = "Managers list";
}

<div class="ml-5 mt-5">
    <h3>Managers List</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>№</td>
                <td>Surname</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var manager in Model.Items)
            {
                <tr>
                    <td>@manager.Id</td>
                    <td>@manager.Surname</td>
                </tr>
            }
        </tbody>
    </table>
    <br/>
    <div>
        @Html.PageLinks(Model.PageInfo, x => Url.Action("Managers", new {page = x}))
    </div>
</div>
