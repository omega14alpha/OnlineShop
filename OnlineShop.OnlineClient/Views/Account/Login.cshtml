@model OnlineShop.OnlineClient.Identity.Models.LoginModel
@{
    ViewData["Title"] = "Authorization form";
}

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="col-md-12">
                <form class="form" asp-action="Login" asp-controller="Account" asp-antiforgery="true">
                    <div class="was-validated" asp-validation-summary=ModelOnly></div>
                    <h3 class="text-center text-info">Login</h3>
                    <div class="form-group">
                        <label asp-for="Email" class="text-info">Email</label><br />
                        <input type="text" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="text-info">Password</label><br />
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="form-group">
                        <label asp-for="RememberMe" class="text-info">RememberMe</label>
                        <input asp-for="RememberMe" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-info btn-md" value="Submit" />
                    </div>
                    <div class="text-right">
                        @Html.ActionLink("Registration", "Register")
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
